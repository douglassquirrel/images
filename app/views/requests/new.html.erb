<h2>Make request</h2>

<% form_for(@request, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <div class="span-24 last">
    <%= f.label :image_file %> <%= f.file_field :image_file %>
  </div>
  <div class="span-11 append-1">
    <%= f.label :question %><br />
    <%= f.text_area :question, :rows => 5 %>
  </div>
  <div class="prepend-1 span-11 last">
    <%= f.label :answer %><br />
    <%= f.text_area :answer, :rows => 5 %>
  </div>
  <div class="prepend-10 span-4 append-10 last">
    <%= f.submit 'Create' %>
    <input type="button" value="All" onclick="location.href='<%= requests_path %>'"/>
  </div>
<% end %>
